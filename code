// Create a variable to hold your NFTs
let nftCollection = [];

// This function will take in some values as parameters, create an
// NFT object using the parameters passed to it for its metadata,
// and store it in the variable above.
function mintNFT(name, description, image) {
  let nft = {
    name: name,
    description: description,
    image: image
  };
  nftCollection.push(nft);
}

// Create a "loop" that will go through an "array" of NFTs
// and print their metadata with console.log()
function listNFTs() {
  nftCollection.forEach(nft => {
    console.log("Name: " + nft.name + ", Description: " + nft.description + ", Image: " + nft.image);
  });
}

// Print the total number of NFTs we have minted to the console
function getTotalSupply() {
  console.log("Total supply of NFTs: " + nftCollection.length);
}

// Call your functions below this line
// Example of minting an NFT and listing the collection
mintNFT("CryptoCorgi", "A cute Corgi NFT", "corgi.png");
listNFTs();
getTotalSupply();
